<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/list_item_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/label_padding_default"
        android:paddingTop="@dimen/label_padding_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/label_padding_default"
            android:paddingTop="@dimen/label_padding_default">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Company Name"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Company Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Email Id"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="a@a.a" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/label_padding_default"
            android:paddingTop="@dimen/label_padding_default">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Customer Name"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cust_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Customer Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="Mobile Number"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mob_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/label_padding_default"
                    android:paddingRight="@dimen/label_padding_default"
                    android:text="9899100101" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/label_padding_default"
            android:paddingTop="@dimen/label_padding_default">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="Date :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="12-04-1029" />


            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="Status :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="hot" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/label_padding_default"
            android:paddingTop="@dimen/label_padding_default">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="Follow Up :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/follow_up_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="12-04-1029" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="Ref. by. :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emp_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/label_padding_default"
                android:paddingRight="@dimen/label_padding_default"
                android:text="Emp Name" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>