<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/list_item_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/label_padding_default"
        android:paddingBottom="@dimen/label_padding_default">

        <TextView
            android:id="@+id/comp_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="Company Name" />

        <TextView
            android:id="@+id/email_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="a@a.a" />


        <TextView
            android:id="@+id/cust_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="Customer Name" />

        <TextView
            android:id="@+id/mob_no"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="9899100101" />

        <TextView
            android:id="@+id/date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="12-04-1029" />

        <TextView
            android:id="@+id/status"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="hot cold warm" />

        <TextView
            android:id="@+id/follow_up_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="12-04-1029" />

        <TextView
            android:id="@+id/emp_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/label_padding_default"
            android:paddingRight="@dimen/label_padding_default"
            android:text="Emp Name" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="12dp"
            android:background="#cccccc" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="5dp"
            android:layout_height="12dp"
            android:background="#cccccc" />

    </LinearLayout>
</LinearLayout>