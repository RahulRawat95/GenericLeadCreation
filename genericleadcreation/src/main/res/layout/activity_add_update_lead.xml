<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/domain" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/customer_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:hint="@string/customer_name_label"
                        android:inputType="text"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/account" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/contact_person_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:hint="@string/contact_person_label"
                        android:inputType="text"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/email" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_address_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:hint="@string/email_address_label"
                        android:inputType="textEmailAddress"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/cellphone" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/mobile_no_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:digits="0123456789"
                        android:hint="@string/mobile_no_label"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/map_marker" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/address_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_label"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/textbox_password" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pin_code_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:hint="@string/pin_code_label"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/comment" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/customer_remarks_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/customer_remarks_label"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/comment_text" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_input_bottom_margin"
                    android:layout_marginTop="@dimen/text_input_margin_top"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/lead_remarks_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lead_remarks_label"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_input_bottom_margin"
                android:layout_marginTop="@dimen/text_input_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/calendar" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/next_follow_up_date_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:focusable="false"
                        android:hint="@string/next_follow_up_date_label"
                        android:inputType="none"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/edit_text_padding_top"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/clock" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/next_follow_up_time_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:focusable="false"
                        android:hint="@string/next_follow_up_time_label"
                        android:inputType="none"
                        android:paddingTop="@dimen/edit_text_padding_top"
                        android:textSize="@dimen/text_size" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_input_bottom_margin"
                android:layout_marginTop="@dimen/text_input_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/edit_text_padding_top"
                    android:src="@drawable/type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/edit_text_right_margin"
                    android:gravity="center_vertical"
                    android:text="@string/call_type_label"
                    android:textSize="@dimen/text_size" />

                <RadioGroup
                    android:id="@+id/call_type_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/call_type_hot_rb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/call_type_hot_label" />

                    <RadioButton
                        android:id="@+id/call_type_cold_rb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/call_type_cold_label" />

                    <RadioButton
                        android:id="@+id/call_type_warm_rb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/call_type_warm_label" />

                </RadioGroup>
            </LinearLayout>
            <!--<fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.wings2aspirations.genericleadcreation.fragment.CustomMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_height"
                android:layout_marginBottom="@dimen/text_input_bottom_margin"
                android:layout_marginTop="@dimen/text_input_margin_top"
                tools:context=".activity.AddUpdateLeadActivity" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_input_bottom_margin"
                android:layout_marginTop="@dimen/text_input_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/camera_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_input_bottom_margin"
                    android:layout_marginRight="@dimen/text_input_margin_top"
                    android:src="@android:drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/file_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="No File Chosen..."
                    android:textSize="@dimen/text_size" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/save_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_input_bottom_margin"
                    android:layout_marginRight="@dimen/text_input_margin_top"
                    android:src="@android:drawable/ic_menu_save" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/progress_background" />
</RelativeLayout>